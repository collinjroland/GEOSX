<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  <Solvers
    gravityVector="0.0, 0.0, -9.81">
  
    <SinglePhaseFlow name="SinglePhaseFlow"
                          verboseLevel="3"
                          gravityFlag="0"
                          fluidName="water"
                          solidName="rock"
                          discretization="singlePhaseTPFA"
                          targetRegions="Domain">
      <SystemSolverParameters krylovTol="1.0e-10"
                              newtonTol="1.0e-6"
                              maxIterNewton="8"/>
    </SinglePhaseFlow>

  </Solvers>
  
  <Mesh>
      <PAMELAMeshGenerator name="CubeHex"
          file="cube_10x10x10_hex.msh"/>
  </Mesh>

  <Geometry>
    <Box name="all" xMin="-1e9, -1e9, -1e9" xMax="1e9, 1e9, 1e9"/>
    <Box name="west" xMin="-1, -1, -1" xMax="1.1, 11, 11"/>
    <Box name="east" xMin="8.1, -1, -1" xMax="11, 11, 11"/>
    <Box name="top" xMin="-1, -1, 8.1" xMax="11, 11, 11"/>
    <Box name="bottom" xMin="-1, -1, -1" xMax="11, 11, 1.1"/>
    <Box name="north" xMin="-1, 8.1, -1" xMax="11, 11, 11"/>
    <Box name="south" xMin="-1, -1, -1" xMax="11, 1.1, 11"/>
    <Box name="coarse" xMin="-1, -1, -1" xMax="2, 11, 11"/>
  </Geometry>

  <Tasks>
    <CopyField name="copyPressure1"
               from="pressure"
               to="pressure1"
               targetRegions="Domain"/>

    <CopyField name="copyPressure2"
               from="pressure"
               to="pressure2"
               targetRegions="Domain"/>

    <CopyField name="copyPressure3"
               from="pressure"
               to="pressure3"
               targetRegions="Domain"/>

    <AggregateStencil name="upscaling"
               from="pressure"
               to="pressure3"
               targetRegions="Domain"/>

    <DownScaleField name="downscaling"
               fieldName="pressure"/>
  </Tasks>


  <Events maxTime="100.">
    <!-- This event is applied every cycle, and overrides the
    solver time-step request -->
    <PeriodicEvent name="solverApplications"
                   forceDt="1"
                   target="/Solvers/SinglePhaseFlow" />

    <PeriodicEvent name="downscaling"
                   forceDt="1"
                   beginTime="5."
                   target="/Tasks/downscaling" />

    <SoloEvent name="firstCopy"
               targetTime="1.0"
               target="/Tasks/copyPressure1" />

    <SoloEvent name="secondCopy"
               targetTime="2.0"
               target="/Tasks/copyPressure2" />

    <SoloEvent name="thirdCopy"
               targetTime="3.0"
               target="/Tasks/copyPressure3" />

    <SoloEvent name="upscaling"
               targetTime="3.0"
               target="/Tasks/upscaling" />

    <!-- This event is applied every 1.0s.  The targetExactTimestep
    flag allows this event to request a dt modification to match an
    integer multiple of the timeFrequency. -->
    <PeriodicEvent name="outputs"
                   timeFrequency="1"
                   targetExactTimestep="1"
                   target="/Outputs/siloWellPump" />

    <PeriodicEvent name="restarts"
                   timeFrequency="1e99"
                   targetExactTimestep="0"
                   target="/Outputs/sidreRestart"
                   endTime="-1"/>
  </Events>


  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 boundaryFieldName="facePressure"
                                 coefficientName="permeability"/>
    </FiniteVolume>

  </NumericalMethods>


  <ElementRegions>
    <ElementRegion name="Domain" cellBlocks="0_HEX" materialList="water rock" coarseningRatio="0.25"/>
  </ElementRegions>

  <Constitutive>
    <CompressibleSinglePhaseFluid name="water"
                                  referencePressure="0.0"
                                  referenceDensity="1000"
                                  compressibility="0.0"
                                  referenceViscosity="0.001"
                                  viscosibility="0.0"/>
    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0.0"
                                 compressibility="0.0"/>

    <CompressibleSinglePhaseFluid name="water1"
                                  referencePressure="0.0"
                                  referenceDensity="1000"
                                  compressibility="5e-10"
                                  referenceViscosity="0.001"
                                  viscosibility="0.0"/>
    <PoreVolumeCompressibleSolid name="rock1"
                                 referencePressure="0.0"
                                 compressibility="1e-9"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification name="permx"
               component="0"
               initialCondition="1"  
               setNames="all"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="permeability"
               scale="2.0e-14"/>

    <FieldSpecification name="permy"
               component="1"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="permeability"
               scale="2.0e-14"/>

    <FieldSpecification name="permz"
               component="2"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="permeability"
               scale="2.0e-14"/>

    <FieldSpecification name="referencePorosity"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="referencePorosity"
               scale="0.05"/>

    <FieldSpecification name="initialPressure"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="pressure"
               scale="0."/>

    <FieldSpecification name="initialPressure1"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/coarse"
               fieldName="pressure"
               scale="1.11111"/>

    <FieldSpecification name="boundaryPressure1"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="pressure"
               functionName="X"
               beginTime="1.0"
               endTime="2.0"
               scale="1"
               setNames="west east north south top bottom"/>

    <FieldSpecification name="boundaryPressure2"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="pressure"
               functionName="Y"
               beginTime="2.0"
               endTime="3.0"
               scale="1"
               setNames="west east north south top bottom"/>

    <FieldSpecification name="boundaryPressure3"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/0_HEX"
               fieldName="pressure"
               functionName="Z"
               scale="1"
               beginTime="3.0"
               endTime="4.0"
               setNames="west east north south top bottom"/>

    <FieldSpecification name="coarseBC"
               objectPath="ElementRegions/elementRegions/Domain/elementSubRegions/coarse"
               fieldName="pressure"
               scale="1.234"
               beginTime="5.0"
               setNames="coarse"/>
  </FieldSpecifications>

  <Functions>
      <SymbolicFunction name="X"
        inputVarNames="elementCenter"
        variableNames="x y z"
        expression="x"/>

      <SymbolicFunction name="Y"
        inputVarNames="elementCenter"
        variableNames="x y z"
        expression="y"/>

      <SymbolicFunction name="Z"
        inputVarNames="elementCenter"
        variableNames="x y z"
        expression="z"/>


  </Functions>

  <!-- <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition> -->

  <Outputs>
      <Silo name="siloWellPump"/>
      <Restart name="sidreRestart"/>
  </Outputs>
</Problem>
